{
  "name": "linea_contract",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean && rm -rf abi/ && rm -rf artifacts/ && rm -rf dist/ && rm -rf typechain/",
    "compile": "hardhat compile",
    "deploy": "npx hardhat run",
    "set-fee": "npx hardhat run scripts/set-feeto.ts",
    "withdraw": "npx hardhat run scripts/withdraw.ts",
    "init-hash": "npx hardhat run scripts/init-code.ts",
    "verify": "yarn hardhat verify --network",
    "export-abi": "yarn run hardhat export-abi",
    "test": "hardhat test test/unit/*.spec.js",
    "test-staging": "hardhat test test/staging/*.spec.js --network sepolia",
    "prettier:contracts": "prettier --config .prettierrc --list-different \"{contracts,src}/**/*.sol\"",
    "lint": "solhint 'contracts/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.3",
    "@types/mocha": ">=9.1.0",
    "@zetachain/networks": "^2.4.2",
    "@zetachain/toolkit": "^2.2.4",
    "chai": "^4.3.7",
    "ethers": "^6.4.0",
    "hardhat": "^2.17.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
